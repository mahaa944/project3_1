    <label for="male">ذكر</label>
    <input type="radio" id="female" name="gender">
    <label for="male">انثى</label>

    <p>من اين سمعت عن html?</p>
    <input type="checkbox" id="friend" name="friend">
    <label for="friend">صديق</label><br>
    <input type="checkbox" id="books" name="books">
    <label for="books">كتب</label><br>
    <input type="checkbox" id="social media" name="social media">
    <label for="social media">وسائل التواصل الاجتماعي</label><br>

    <label for="city">اختر مدينتك :</label><br>
